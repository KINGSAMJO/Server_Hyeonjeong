<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity"
    android:layout_marginVertical="20dp">
    <ImageView
        android:id="@+id/iv_detail_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sopt"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_detail_profile"
        app:layout_constraintEnd_toStartOf="@+id/tv_detail_names"
        android:layout_marginStart="10dp"
        android:text="@string/tv_detail_name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_profile"/>
    <TextView
        android:id="@+id/tv_detail_names"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_name"
        android:text="박현정"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_name"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_name" />
    <TextView
        android:id="@+id/tv_detail_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_detail_desc"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_desc"
        app:layout_constraintStart_toEndOf="@+id/tv_detail_desc"
        android:ellipsize="end"
        android:text="파트입니다~"/>



</androidx.constraintlayout.widget.ConstraintLayout>